<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Tarea1._3.MainPage">

    <ContentPage.Content>
        <StackLayout>

            <Entry Keyboard="Text" Placeholder="Nombre" x:Name="Nombre"
                Margin="5"/>
            <Entry Keyboard="Text" Placeholder="Apellido" x:Name="Apellidos"
                Margin="5"/>
            <Entry Keyboard="Numeric" Placeholder="Edad" x:Name="Edad"
                Margin="5"/>
            <Entry Keyboard="Email" Placeholder="Correo" x:Name="Correo"
                Margin="5"/>
            <Entry Keyboard="Text" Placeholder="Direccion" x:Name="Direccion"
                Margin="5"/>
            <Button x:Name="btnGuardar" Text="Registrar" Clicked="btnGuardar" 
                 Margin="10" Padding="15"
                 BorderWidth="3"  Background="black" MaximumWidthRequest="150"/>

        </StackLayout>
    </ContentPage.Content>

</ContentPage>
